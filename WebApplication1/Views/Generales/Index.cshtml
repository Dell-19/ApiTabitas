@model WebTabitas.Models.General
@{
    ViewData["Title"] = "Lista Modelos";
}
<head>
    <link href="../css/propio.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-8">
            <h2 class="text-primary">
                <i class="fas fa-list-alt"></i> Lista Modelos
            </h2>
        </div>
        <div class="d-flex justify-content-end align-items-center mb-3">
            <div id="tblGeneral_filter" class="dataTables_filter me-2"></div>
            <a asp-action="Create" class="btn btn-success text-white">
                <i class="fas fa-plus"></i> Nuevo Modelo
            </a>
        </div>

    <div class="table-responsive">
        <table id="tblGeneral" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">IdGeneral</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">RangoTallas</th>
                    <th scope="col">Temporadas</th>
                    <th scope="col">Pt</th>
                    <th scope="col">NumeroOrden</th>
                    <th scope="col">CantidadRequerida</th>
                    <th scope="col">FechaRecepcion</th>
                    <th scope="col">FechaEntrega</th>
                    <th scope="col">ProcesoActual</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody><!--Aqui iran las filas generadas por DataTables--></tbody>
        </table>
    </div>
</div>

    <!-- Modal para ampliar imágenes -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel">Vista previa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" alt="Vista previa" style="max-width: 100%; max-height: 80vh;">
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <script src="~/js/General.js"></script><!--el archivo que va a utilizar datatables para llenar los datos  -->
}

