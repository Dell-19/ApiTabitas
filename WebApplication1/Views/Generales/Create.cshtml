@model WebTabitas.Models.ViewModel.AlmacenVM
@{
    ViewData["Title"] = "Crear Nuevo Registro";
    Layout = null; // Sin layout
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/propio.css" rel="stylesheet">
</head>
<body>
    <div class="row mb-4">
        <div class="col-8">
            <img src="~/Recursos/Logo.jpg" alt="Logo" class="float-left" style="width: 60px; height: 70px; margin-right: 15px;">
            <h2 class="text-primary d-inline">Nuevo Registro</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @* Mostrar errores generales *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <div class="form-group">
                    <label asp-for="General.Modelo" class="control-label"></label>
                    <input asp-for="General.Modelo" class="form-control" required />
                    <span asp-validation-for="General.Modelo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 row">
                    <label for="General_Imagen" class="col-md-4 col-form-label">Imagen</label>
                    <div class="col-8">
                        <input type="file" asp-for="General.Imagen" class="form-control" id="General_Imagen" />
                        <span asp-validation-for="General.Imagen" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="General.Descripcion" class="control-label"></label>
                    <input asp-for="General.Descripcion" class="form-control" required />
                    <span asp-validation-for="General.Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.RangoTallas" class="control-label"></label>
                    <input asp-for="General.RangoTallas" class="form-control" required />
                    <span asp-validation-for="General.RangoTallas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.Temporadas" class="control-label"></label>
                    <input asp-for="General.Temporadas" class="form-control" required />
                    <span asp-validation-for="General.Temporadas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.Pt" class="control-label"></label>
                    <input asp-for="General.Pt" class="form-control" required />
                    <span asp-validation-for="General.Pt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.NumeroOrden" class="control-label"></label>
                    <input asp-for="General.NumeroOrden" class="form-control" required />
                    <span asp-validation-for="General.NumeroOrden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.CantidadRequerida" class="control-label"></label>
                    <input asp-for="General.CantidadRequerida" type="number" class="form-control" required />
                    <span asp-validation-for="General.CantidadRequerida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.FechaRecepcion" class="control-label"></label>
                    <input asp-for="General.FechaRecepcion" type="date" class="form-control" required />
                    <span asp-validation-for="General.FechaRecepcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="General.FechaEntrega" class="control-label"></label>
                    <input asp-for="General.FechaEntrega" type="date" class="form-control" />
                    <span asp-validation-for="General.FechaEntrega" class="text-danger"></span>

                    <div class="form-group mb-3">
                        <label for="ProcesoActual" class="col-md-4 col-form-label text-md-end">Área</label>
                        <div>
                            @Html.DropDownListFor(c => c.General.IdProceso, Model.ListaAreas, "-Selecciona el Área del Proceso-",
                                     new { @class = "form-control" })
                            <span asp-validation-for="General.IdProceso" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Nuevo Registro</button>
                        <a asp-action="Index" class="btn btn-danger mx-2">Cancelar</a>
                    </div>
            </form>
        </div>
    </div>
</body>
</html>

