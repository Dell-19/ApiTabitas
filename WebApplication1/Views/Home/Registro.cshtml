@model WebTabitas.Models.UsuarioAuth
@{
    ViewData["Title"] = "Registrar Usuario";
}

<h1 class="text-center">Registrar</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form action="/Home/Registro" method="post">
            <!-- Cambiado de Usuario a Home -->
            <div class="form-group row mb-3">
                <label class="col-4 col-form-label" for="NombreUsuario">Usuario</label>
                <div class="col-8">
                    <input type="text" asp-for="NombreUsuario" class="form-control" placeholder="Ingresa el nombre de Usuario" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-4 col-form-label" for="Nombre">Nombre</label>
                <div class="col-8">
                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa su nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label class="col-4 col-form-label" for="Password">Contraseña</label>
                <div class="col-8">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Ingresa la Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-user-plus"></i> Registrar
            </button>
        </form>
    </div>
</div>

@if (TempData["alert"] != null)
{
    <div class="alert alert-info mt-3">
        @TempData["alert"]
    </div>
}
