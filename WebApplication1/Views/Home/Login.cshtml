@model WebTabitas.Models.UsuarioAuth
@{
    ViewData["Title"] = "Acceso Usuario";
}
<h1 class="text-center">Iniciar Sesion</h1>
<div class="row mt-4">
    <div class="col-12">
        @if (TempData["alert"]!=null)
        {
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <h3><strong>@TempData["alert"]</strong></h3>
              <button type="button" class="btn-close" data-bs-dimiss="alert" aria-label="Close"></button>
          </div>  
        }
    </div>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <form action="Login" method="post">
            <div class="form-group row mb-3">
                <label class="col-4 col-form-label" for="Usuario">Usuario</label>
                <div>
                <input type="text" asp-for="NombreUsuario" class="form-control" placeholder="Ingresa el nombre de Usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-4 col-form-label"for="Password">Contraseña</label>
                <div>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Ingresa la Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-sign-in-alt"></i> INGRESAR
            </button>
        </form>
    </div>
</div>