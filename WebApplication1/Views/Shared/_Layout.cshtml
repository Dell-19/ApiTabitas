@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpAcc
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebTabitas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.5/sweetalert2.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebTabitas.styles.css" asp-append-version="true" />
</head>
<style>
    .navbar {
        background-color: #007bff; 
    }

    .navbar-nav .nav-link {
        font-weight: bold;
        transition: color 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            color: #ffcc00; 
        }
</style>
<body>
    <header>
        <head>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        </head>

        <nav class="navbar navbar-expand-lg navbar-light bg-primary text-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/Recursos/Logo.jpg" alt="Logo" class="float-left" style="width: 60px; height: 70px; margin-right: 15px;">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                @if (User.Identity.IsAuthenticated)
                {
                        var usuario = httpAcc.HttpContext.Session.GetString("Usuario");
                        if (usuario == "General")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Generales" asp-action="Index">General</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Almacenes" asp-action="Index">Almacen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Cortes" asp-action="Index">Corte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="CorteLaseres" asp-action="Index">Corte Láser</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Etiquetas" asp-action="Index">Etiquetas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Bordados" asp-action="Index">Bordado</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Serigrafias" asp-action="Index">Serigrafia</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Maquilas" asp-action="Index">Maquila</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Lavados" asp-action="Index">Lavado</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Calidades" asp-action="Index">Calidad</a>
                            </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Terminados" asp-action="Index">Terminado</a>
                                </li>
                        }
                        else if (usuario == "Almacen")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Almacenes" asp-action="Index">Almacen</a>
                            </li>
                        }
                        else if (usuario == "Etiquetas")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Etiquetas" asp-action="Index">Etiquetas</a>
                            </li>
                        }
                        else if (usuario == "Corte")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Cortes" asp-action="Index">Corte</a>
                            </li>
                        }
                        else if (usuario == "CorteLaser")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="CorteLaser" asp-action="Index">Corte Láser</a>
                            </li>
                        }
                        else if (usuario == "Bordado")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-controller="Bordados" asp-action="Index">Bordado</a>
                            </li>
                        }
                        else if (usuario == "Serigrafia")
                        {
                            <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Serigrafias" asp-action="Index">Serigrafia</a>
                            </li>
                        }
                        else if (usuario == "Maquila")
                        {
                            <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Maquilas" asp-action="Index">Maquila</a>
                            </li>
                        }
                        else if (usuario == "Lavado")
                        {
                             <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Lavados" asp-action="Index">Lavado</a>
                             </li>
                        }
                        else if (usuario == "Calidad")
                        {
                              <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Calidades" asp-action="Index">Calidad</a>
                              </li>
                        }
                        else if (usuario == "Terminado")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Terminados" asp-action="Index">Terminado</a>
                                </li>
                        }
                }
            </ul>

                    <ul class="navbar-nav">
                        @if (httpAcc.HttpContext.Session.GetString("JWToken") != null &&
                        httpAcc.HttpContext.Session.GetString("JWToken").ToString().Length>0) 
                        {
                            <li class="nav-item">
                                <a class="nav-link text-Black fw-bold" asp-area="" asp-controller="Home" asp-action="Logout">     Bienvenido: @httpAcc.HttpContext.Session.GetString("Usuario")-Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Login">Acceder</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebTabitas - <a asp-area="" asp-controller="Home" asp-action="index">Inicio</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
